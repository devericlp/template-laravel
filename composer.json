{
    "name": "devericlp/tallstack-starter-kit",
    "type": "project",
    "description": "Starter kit for TALL Stack applications with Livewire Flux integration.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "intervention/image": "^3.11",
        "laravel/framework": "12.0",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.9.0",
        "livewire/flux-pro": "^2.9.0",
        "livewire/livewire": "^3.5",
        "owen-it/laravel-auditing": "^14.0",
        "spatie/laravel-permission": "^6.22",
        "symfony/console": "7.3.6"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.26",
        "laravel/sail": "^1.26",
        "laravel/telescope": "^5.10",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "spatie/pest-plugin-test-time": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "app/Support/Functions.php"
        ]
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "reset-dev": [
            "php artisan migrate:fresh",
            "php artisan db:seed",
            "php artisan optimize:clear",
            "php artisan optimize"
        ],
        "pull": [
            "composer install",
            "composer update",
            "npm install",
            "npm update",
            "php artisan migrate:fresh",
            "php artisan storage:link",
            "php artisan optimize:clear",
            "php artisan optimize",
            "php artisan db:seed"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": {
        "flux-pro": {
            "type": "composer",
            "url": "https://composer.fluxui.dev"
        }
    }
}